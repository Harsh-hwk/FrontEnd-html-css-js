extends base.pug

block scripts
    script(src="/static/script.js")

block style
    style
        include ../static/style.css
        include ../static/contact.css
block content
    div.container
        h1 Contact Us
        form(action="/contact", method="post", class="myForm")
            input(type="text", class="myinput", name="name", placeholder="Name")
            input(type="email", class="myinput", name="email", placeholder="Email")
            input(type="phone", class="myinput", name="phone", placeholder="Phone Number")
            input(type="text", class="myinput", name="address", placeholder="Address")
            input(type="text", class="myinput", name="desc", placeholder="Description")
            button.btn
                | Submit